// .vscode/tasks.json
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "bun run dev",
			"type": "shell",
			"command": "bun",
			"args": ["run", "dev"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [],
			"detail": "Run the development server",
			"presentation": {
				"clear": true
			}
		},
		{
			"label": "bun lint-staged",
			"type": "shell",
			"command": "bun",
			"args": ["lint-staged"],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"problemMatcher": ["$eslint-compact", "$tsc"],
			"detail": "Format, lint, and type check staged files via lint-staged",
			"presentation": {
				"clear": true
			}
		},
		{
			"label": "bun run release:registry",
			"type": "shell",
			"command": "bun",
			"args": ["run", "release:registry"],
			"problemMatcher": [],
			"detail": "Release the registry to jsrepo",
			"presentation": {
				"clear": true
			}
		}
	]
}
